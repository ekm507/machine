/*

machine

*/

#include <iostream>
#include <fstream>

#include "hardware.hpp"

using namespace std;

int main(int argc, char** argv)
{
	if(argc < 2)
	{
		std::cerr<<"usage : main <file-name>";
		return 2;
	}

	cout << argv[1];

	ifstream source;
	source.open(argv[1]);
	while(!source.eof())
	{
		char* k;
		source >> k;
		std::cout<<k;
	}
	
	source.close();
	return 0;
}
